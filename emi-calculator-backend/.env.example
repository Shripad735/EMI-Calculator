# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
# For development: Use MongoDB Atlas connection string
# For production: Use the same MongoDB Atlas connection string (ensure IP whitelist includes 0.0.0.0/0 or your deployment platform IPs)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/emi-calculator?retryWrites=true&w=majority

# JWT Configuration
# IMPORTANT: Generate a strong random secret for production (use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Firebase Configuration (for phone authentication)
# Get these from Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID=emi-calcy

# For Vercel/Production: Use these environment variables
# Copy from your serviceAccountKey.json file
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# For Local Development: You can either:
# 1. Set the above env vars, OR
# 2. Place serviceAccountKey.json in the backend root folder

# CORS Configuration
# For development
ALLOWED_ORIGINS=http://localhost:19000,http://localhost:19006

# For production (add your deployed frontend URL)
# ALLOWED_ORIGINS=https://your-app.expo.dev,exp://your-expo-app
